%section.generic-section
    %div.container
        %div.row
            - @notes.each do |note|
                %div.col-12.col-lg-4
                    %div.note-card
                        %h2= link_to note.title, note
                        %p= time_ago_in_words(note.created_at)
        %div.row
            %div.col-12
                %div.new-note-box
                    = link_to "New Note", new_note_path